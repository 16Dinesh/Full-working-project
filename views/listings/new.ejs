<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2"><br><br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" enctype="multipart/form-data" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Add title" type="text" class="form-control" required>
                <div class="valid-feedback">
                    Title Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Invalid description
                </div>
            </div>
            <% if (localuser && localuser.isAdmin) { %>
            <!-- Link upload -->
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control">
            </div> -->
            <% } %>
            <!-- clould upload -->
            <div class="mb-3">
                <label for="uploadImage" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" class="form-control" required>
                    <div class="invalid-feedback">
                        Invalid Price
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Invalid Country name
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Hyderabad" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Invalid Location
                </div>
            </div>
            <button class="btn btn-dark add-btn mt-3">Done</button>
        </form>
    </div>
</div><br>
