<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2"><br><br>
        <h3>Edit Your Listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Invalid Title
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Invalid description
                </div>
            </div>
            <div class="mb-3">
                <p>Existing Image</p>
                <img src="<%= originalImageUrl %>"/>
            </div>        
            <!-- Cloud upload -->
            <div class="mb-3">
                <label for="uploadImage" class="form-label">Update Image</label>
                <input name="listing[image]" value="<%= listing.image.url || "uploadfile"  %>" type="file" class="form-control">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" class="form-select" required>
                    <option disabled>Select a category</option>
                    <option value="Home pools" <% if (listing.category === "Home pools") { %>selected<% } %>>Home pools</option>
                    <option value="Town houses" <% if (listing.category === "Town houses") { %>selected<% } %>>Town houses</option>
                    <option value="Workship" <% if (listing.category === "Workship") { %>selected<% } %>>Workship</option>
                    <option value="Arctic" <% if (listing.category === "Arctic") { %>selected<% } %>>Arctic</option>
                    <option value="Igloo" <% if (listing.category === "Igloo") { %>selected<% } %>>Igloo</option>
                    <option value="Camping" <% if (listing.category === "Camping") { %>selected<% } %>>Camping</option>
                    <option value="Icons" <% if (listing.category === "Icons") { %>selected<% } %>>Icons</option>
                    <option value="Mountains" <% if (listing.category === "Mountains") { %>selected<% } %>>Mountains</option>
                </select>
                <div class="invalid-feedback">
                    Please select a category
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required>
                    <div class="invalid-feedback">
                        Invalid Price
                    </div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Invalid Country name
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Invalid Location
                </div>
            </div>
            <button class="btn btn-dark edit-btn mt-3">Done</button>
            <br><br>
        </form>
    </div>
</div>
